{
	"name": "Go to line",
	"description": "Go to line in plain files",
	"version": "1.0",
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"icons": {
		"16": "icons/icon_16.png",
		"32": "icons/icon_32.png",
		"48": "icons/icon_48.png",
		"128": "icons/icon_128.png"
	},
	"browser_action": {
		"default_title": "Go to line",
		"default_icon": "icons/icon_16.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"https://*/*",
				"http://*/*"
			],
			"js": [
				"libs/jquery-2.1.4.min.js",
				"js/decorator.js",
				"js/inject.js"
			]
		}
	],
	"manifest_version": 2
}
